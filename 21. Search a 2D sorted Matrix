def searchMatrix(mat, target):
    if not mat or not mat[0]:
        return False  # Edge case: Empty matrix
    
    n, m = len(mat), len(mat[0])
    low, high = 0, n * m - 1
    
    while low <= high:
        mid = (low + high) // 2
        row, col = mid // m, mid % m
        mid_val = mat[row][col]
        
        if mid_val == target:
            return True
        elif mid_val < target:
            low = mid + 1
        else:
            high = mid - 1
    
    return False
